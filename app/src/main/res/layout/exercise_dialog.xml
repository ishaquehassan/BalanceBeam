<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="ishaquehassan.balancebeam.ExercisesActivity">

    <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView
                android:id="@+id/ed_eTitleTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EXERCISE TITLE"
                android:gravity="center"
                android:padding="10dp"
                android:textSize="25sp"
                android:textColor="@android:color/white"
                android:background="@color/colorPrimary"
        />

        <ImageView android:layout_width="30dp"
                   android:id="@+id/ed_closeBtn"
                   android:layout_gravity="center_vertical|end"
                   android:layout_marginEnd="10dp"
                   android:tint="@android:color/white"
                   android:layout_height="30dp" android:src="@drawable/cancel"/>
    </FrameLayout>

    <LinearLayout android:layout_width="match_parent" android:orientation="vertical" android:layout_height="0dp" android:layout_weight="1"
                  android:background="#ccc">
        <pl.droidsonroids.gif.GifImageView
                android:background="@android:color/white"
                android:id="@+id/ed_eImg"
                android:src="@drawable/abs_b_6"
                android:scaleType="centerInside"
                android:layout_height="220dp"
                style="@style/item_image_style"/>

        <TextView
                android:padding="20dp"
                android:id="@+id/ed_eDetailsTv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Push Ups 3x"
                android:textColor="@android:color/black"
                android:textSize="20sp"
        />
    </LinearLayout>


    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:text="Watch VIDEO"
            android:textColor="@android:color/white"
            android:textSize="17sp"
            android:id="@+id/ed_eVideoBtn"
    />

</LinearLayout>