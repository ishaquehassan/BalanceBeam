<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="ishaquehassan.balancebeam.ExercisesActivity">
    <LinearLayout
            android:descendantFocusability="blocksDescendants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
    >


        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/exHead_bgImg"
                    android:src="@drawable/cover_chest_1"
                    style="@style/item_image_style"/>


            <FrameLayout
                    style="@style/item_overlay_frame_style">

                <LinearLayout
                        style="@style/item_text_container_style">

                    <TextView
                            android:id="@+id/exHead_titleTv"
                            android:text="CHEST"
                            style="@style/item_title_style"/>
                    <TextView
                            android:id="@+id/exHead_stitleTv"
                            android:text="20 Exercises &amp; Diet Plan"
                            style="@style/item_sub_title_style"/>

                    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">

                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:background="@drawable/round_btn_bg"
                                  android:text="Lean Diet Plan"
                                  android:paddingStart="10dp"
                                  android:paddingEnd="10dp"
                                  android:paddingTop="5dp"
                                  android:paddingBottom="5dp"
                                  android:textColor="@android:color/white"
                                  android:layout_marginTop="10dp"
                                  android:id="@+id/exHead_dietPlanBtn"
                                  android:layout_marginEnd="10dp"
                        />

                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:background="@drawable/round_btn_bg"
                                  android:text="Bulk Diet Plan"
                                  android:paddingStart="10dp"
                                  android:paddingEnd="10dp"
                                  android:paddingTop="5dp"
                                  android:paddingBottom="5dp"
                                  android:textColor="@android:color/white"
                                  android:layout_marginTop="10dp"
                                  android:id="@+id/exHead_dietPlanBtnBulk"
                        />
                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>
        </FrameLayout>
        <android.support.v7.widget.RecyclerView
                android:id="@+id/exercisesList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>