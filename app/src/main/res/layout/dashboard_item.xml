<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="10dp"
    >

        <ImageView
                android:id="@+id/dashItem_bgImg"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
        />


        <FrameLayout
                style="@style/item_overlay_frame_style">

            <LinearLayout
                    style="@style/item_text_container_style">

                <TextView
                        android:id="@+id/dashItem_titleTv"
                        android:text="CHEST"
                        style="@style/item_title_style"/>
                <TextView
                        android:id="@+id/dashItem_stitleTv"
                        android:text="20 Exercises &amp; Diet Plan"
                        style="@style/item_sub_title_style"/>
            </LinearLayout>

        </FrameLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>