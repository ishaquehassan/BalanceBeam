<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_main"
        tools:context="ishaquehassan.balancebeam.MainActivity">

    <LinearLayout
            android:descendantFocusability="blocksDescendants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">

            <android.support.v7.widget.CardView
                    android:id="@+id/weightLooseBtn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="0dp"
                    app:cardCornerRadius="10dp">

                <ImageView
                        android:id="@+id/dashSpecialItem1_bgImg"
                        android:src="@drawable/cover_chest_1"
                        style="@style/item_image_style"
                        android:layout_height="100dp"
                />


                <FrameLayout style="@style/item_overlay_frame_style">

                    <LinearLayout style="@style/item_text_container_style">

                        <TextView
                                android:id="@+id/dashSpecialItem1_titleTv"
                                android:text="WEIGHT LOOSE"
                                style="@style/item_title_style"
                                android:textSize="20sp"
                        />
                        <TextView
                                android:id="@+id/dashSpecialItem1_stitleTv"
                                android:text="Exercises &amp; Diet Plan for weight loose"
                                style="@style/item_sub_title_style"
                                android:textSize="12sp"
                        />
                    </LinearLayout>

                </FrameLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    android:id="@+id/patientsBtn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    app:cardCornerRadius="10dp">

                <ImageView
                        android:id="@+id/dashSpecialItem2_bgImg"
                        android:src="@drawable/cover_chest_2"
                        style="@style/item_image_style"
                        android:layout_height="100dp"
                />


                <FrameLayout style="@style/item_overlay_frame_style">

                    <LinearLayout style="@style/item_text_container_style">

                        <TextView
                                android:id="@+id/dashSpecialItem2_titleTv"
                                android:text="PATIENTS PROGRAM"
                                style="@style/item_title_style"
                                android:textSize="20sp"
                        />
                        <TextView
                                android:id="@+id/dashSpecialItem2_stitleTv"
                                android:text="Exercises &amp; Diet Plan for weight loose"
                                style="@style/item_sub_title_style"
                                android:textSize="12sp"
                        />
                    </LinearLayout>

                </FrameLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
                android:descendantFocusability="blocksDescendants"
                android:id="@+id/dashboardList"
                android:nestedScrollingEnabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        />

    </LinearLayout>


</android.support.v4.widget.NestedScrollView>